<div id="floating-signup_page">

<h1>Sign Up</h1>

  <% if @artist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@artist.errors.count, "error") %> prohibited this artist from being saved:</h2>

      <ul>
      <% @artist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= form_for(@artist) do |f| %>


  <div class="field">
    <%= f.label :band_name %><br />
    <%= f.text_field :band_name %>
  </div>
  <div class="field">
    <%= f.label :biography %><br />
    <%= f.text_field :biography %>
  </div>
  <div class="field">
    <%= f.label :band_image %><br />
    <%= f.file_field :band_image %>
  </div>

  <div class="actions">
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
    <%= f.submit %>
  </div>
<% end %>
</div>

