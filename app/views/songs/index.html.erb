<h1>Listing songs</h1>

<table>
  <tr>
    <th>Song name</th>

    <th>Artist</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= link_to song.song_name, song %></td>
    <td><%= song.artist.band_name %></td>
    <td><%= song.comment_id %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

